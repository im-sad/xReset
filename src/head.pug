head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title xReset
  link(rel='stylesheet', href='/css/reset.css')

  style(type='text/css').
    p {
      margin: 30px 0;
    }

    hr {
      width: 100%;
      height: 1px;
      background: #000;
      border: none;
      opacity: 0.06;
      margin: 40px 0;
    }

    .page {
      background: #eee;
      width: 100%;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
      border-radius: 5px;
      padding: 15px 40px;
      box-shadow: 0 1px 15px rgba(#000, 0.9);
      border-bottom: 1px solid #ddd;
    }
